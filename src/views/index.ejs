<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Train Nodejs</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<body>
    <div class="topnav" id="myTopnav">
        <a href="/" class="active">Home</a>
        <a href="/addUser">Add User</a>
        <a href="/addfile">Add File</a>
        <a href="/contact">Contact</a>
        <a href="/about">About</a>
    </div>
    <div style="padding:  30px 30px 10px 30px">
        <h2>List User</h2>
        <table class="w3-table-all">
            <thead>
                <tr class="w3-red">
                    <th>id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <% for(let i=0;i<datauser.length;i++) { %>
                <tr>
                    <td>
                        <%=datauser[i].id %>
                    </td>
                    <td>
                        <%=datauser[i].Name %>
                    </td>
                    <td>
                        <%=datauser[i].Email %>
                    </td>
                    <td>
                        <a href="/detail/user/<%=datauser[i].id %>"><button type="button">Details</button></a>
                        <a href="/edit-user/<%=datauser[i].id %>"><button type="submit">Edit</button></a>
                        <form class="form-delete" action="/delete-user" method="POST">
                            <button type="submit">Delete</button>
                            <input type="text" name="id" hidden value="<%=datauser[i].id%>">
                        </form>
                    </td>
                </tr>
                <% } %>
        </table>
    </div>
    <div style="padding: 0px 30px 30px 30px   ">
        <h2>List API </h2>
        <table class="w3-table-all">
            <thead>
                <tr class="w3-red">
                    <th>API</th>
                    <th>Function</th>
                </tr>
            </thead>
            <tr>
                <td>
                    http://localhost:3000/api/getuser
                </td>
                <td>
                    Lấy toàn bộ user
                </td>
            </tr>
            <tr>
                <td>
                    http://localhost:3000/api/adduser
                </td>
                <td>
                    Tạo user mới
                </td>
            </tr>
            <tr>
                <td>
                    http://localhost:3000/api/updateuser
                </td>
                <td>
                    Edit user
                </td>
            </tr>
            <tr>
                <td>
                    http://localhost:3000/api/deleteuser
                </td>
                <td>
                    Xóa user
                </td>
            </tr>
            <tr>
                <td>
                    http://localhost:3000/api/singlefile
                </td>
                <td>
                    Upload 1 file ảnh
                </td>
            </tr>
            <tr>
                <td>
                    http://localhost:3000/api/mutilfile
                </td>
                <td>
                    Upload 2 file ảnh
                </td>
            </tr>
        </table>
    </div>
</body>

</html>